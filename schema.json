{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Spectator Script Registry",
	"type": "object",
	"properties": {
		"$schema": {
			"type": "string"
		},
		"scripts": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"displayName": {
						"type": "string"
					},
					"description": {
						"type": "string"
					},
					"author": {
						"type": "string"
					},
					"url": {
						"type": "string",
						"pattern": "^https://github.com/.*\\.git$"
					}
				},
				"required": ["name", "displayName", "author", "url"],
				"additionalProperties": false
			}
		}
	},
	"required": ["scripts"],
	"additionalProperties": false
}
